{
  "// ──────────────────────────────────────────────": "",
  "// マルチキャラクター音声生成アプリ - Claude Code 設定": "",
  "// ──────────────────────────────────────────────": "",

  "// Agent Teams（実験的機能）を有効化": "",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },

  "// モデル設定": "",
  "model": "claude-opus-4-6",

  "// コンテキスト管理": "",
  "contextCompaction": {
    "thresholdPercentage": 80
  },

  "// パーミッション設定": "",
  "permissions": {
    "allow": [
      "Read(*)",
      "Write(frontend/**)",
      "Write(.claude/**)",
      "Glob(*)",
      "Grep(*)",
      "Bash(npx tsc *)",
      "Bash(npx eslint *)",
      "Bash(npx prettier *)",
      "Bash(npm install *)",
      "Bash(npm run *)",
      "Bash(npx shadcn@latest *)",
      "Bash(git diff *)",
      "Bash(git status)",
      "Bash(git log *)",
      "Bash(cat *)",
      "Bash(ls *)",
      "Bash(find *)",
      "Bash(wc *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(mkdir *)",
      "Bash(cp *)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Read(.env*)",
      "Write(.env*)"
    ]
  }
}
